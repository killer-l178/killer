#include<iostream>
#define N 10
//¿ªÍ·½áÎ²¶¼ÊÇ1
int main()
{
    int arr[N][N];
    int i, j;
    //根据观察到的规律
    //数组的第一列和最后一列数据都为1
    for (i = 0, j = 0; i < N; i++)
    {
        arr[i][j] = 1;
    }

    for (i = 0, j = 0; i < N; i++)
    {
        arr[i][j] = 1;
        j++;
    }
     //找到规律arr[i][j] = arr[i - 1][j - 1] + arr[i - 1][j];
     //从第二行第二列开始
    for (i = 2; i < N; i++)
    {
        for (j = 1; j < i; j++)
        {
            arr[i][j] = arr[i - 1][j - 1] + arr[i - 1][j];
        }
    }

    //打印
    for (i = 0; i < N; i++)
    {
        for (j = 0; j <= i; j++)
        {
            std::cout << arr[i][j] << " ";
        }
        std::cout << std::endl;
    }

}
